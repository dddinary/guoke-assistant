<view class="card-wrapper">
    <view class="cu-list menu-avatar">
        <view class="cu-item">
            <view class="cu-avatar radius" style="background-image:url({{author.avatar}});" bindtap='_goAuthor'></view>
            <view class="content flex-sub">
                <view>
                    <text space="ensp" bindtap='_goAuthor' class="text-bold"> {{author.name}} </text>
                    <text class="cuIcon-crownfill text-orange " wx:if="{{post.uid != 0}}"></text>
                    <text class="cuIcon-cardboardfill text-gray" wx:else></text>
                </view>
                <view class="text-gray text-sm flex justify-between post-time">
                    {{post.created_at}}
                </view>
            </view>
        </view>
    </view>
    <view class="text-content padding-top-sm padding-bottom-sm">
        {{post.content}}
    </view>
    <!-- <view class="grid flex-sub padding-lr {{isCard?'col-3 grid-square':'col-1'}}">
    <view class="bg-img {{isCard?'':'only-img'}}" style="background-image:url(https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg);" wx:for="{{isCard?9:1}}" wx:key="{{index}}">
    </view>
    </view> -->
    <view class="solid-top flex grid col-{{showShare?4:3}} text-center padding-sm">
        <view><text class="cuIcon-appreciate margin-lr-xs lg"> </text><text>20</text></view>
        <view><text class="cuIcon-message margin-lr-xs lg"> </text><text>{{post.comment}}</text></view>
        <view><text class="cuIcon-like margin-lr-xs lg"></text></view>
        <view wx:if="{{showShare}}"><text class="cuIcon-share margin-lr-xs lg"></text></view>
    </view>
</view>
